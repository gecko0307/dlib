module dlib.image.morphology;

private
{
    import dlib.image.color;
    import dlib.image.image;
    import dlib.image.arithmetics;
}

enum MorphOperation
{
    Dilate,
    Erode
}

// TODO:
// add support for other structuring elements
// other than box (disk, diamond, etc)
SuperImage morph(MorphOperation op) (SuperImage img)
in
{
    assert (img.data.length);
}
body
{
    SuperImage res = img.dup;

    uint kw = 3, kh = 3;

    float pixelPersentage = 1.0f / cast(float)(res.width * res.height);

    ushort maxChV = cast(ushort)((2 ^^ img.bitDepth) - 1);

    foreach(y; 0..img.height)
    foreach(x; 0..img.width)
    {
        auto alpha = img[x, y].a;

        static if (op == MorphOperation.Dilate)
        {
            ColorRGBA resc = ColorRGBA(0, 0, 0, maxChV);
        }
        static if (op == MorphOperation.Erode)
        {
            ColorRGBA resc = img[x, y];
        }

        foreach(ky; 0..kh)
        foreach(kx; 0..kw)
        {
            int iy = y + (ky - kh/2);
            int ix = x + (kx - kw/2);

            // Extend
            if (ix < 0) ix = 0;
            if (ix >= img.width) ix = img.width - 1;
            if (iy < 0) iy = 0;
            if (iy >= img.height) iy = img.height - 1;
            
            // TODO:
            // Wrap

            auto pix = img[ix, iy];

			auto fpix = ColorRGBAf(pix);
			auto fresc = ColorRGBAf(resc);
            static if (op == MorphOperation.Dilate)
            {
                if (fpix > fresc)
                    resc = pix;
            }
            static if (op == MorphOperation.Erode)
            {
                if (fpix < fresc) 
                    resc = pix;
            }
        }

        res[x, y] = ColorRGBA(resc.r, resc.g, resc.b, alpha);
    }

    return res;
}

alias morph!(MorphOperation.Dilate) dilate;
alias morph!(MorphOperation.Erode) erode;

enum open = (SuperImage img) => img.erode.dilate;
enum close = (SuperImage img) => img.dilate.erode;

enum gradient = (SuperImage img) => subtract(img.dilate, img.erode);

enum topHatWhite = (SuperImage img) => subtract(img, img.open);
enum topHatBlack = (SuperImage img) => subtract(img, img.close);
