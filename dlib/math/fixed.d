module dlib.math.fixed;

/*
 * Fixed point arythmetics
 * (WIP status)
 */
struct fixed
{
    private int x;

    public:

    static fixed opCall(int n)
    {
        fixed res;
        res.x = n << 16;
        return res;
    }

    static fixed opCall(double n)
    {
        fixed res;
        res.x = cast(int)(n * (1 << 16));
        return res;
    }

    fixed opAssign(int n)
    {
        x = n << 16;
        return this;
    }

    fixed opAssign(double n)
    {
        x = cast(int)(n * (1 << 16));
        return this;
    }

    fixed opAdd(fixed b)
    {
        fixed res;
        res.x = x + b.x;
        return res;
    }

    fixed opSub(fixed b)
    {
        fixed res;
        res.x = x - b.x;
        return res;
    }

    fixed opMul(fixed b)
    {
        fixed res;
        long x1 = cast(long)x * b.x;
        res.x = cast(int)(x1 >> 16);
        return res;
    }

    double opCast()
    {
        return 1.0 * x / (1 << 16);
    }
}
